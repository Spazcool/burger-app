<style media="screen">
  li {
    background-color: wheat;
    margin-bottom: 10px;
    padding: 10px;
    width: 50%;
    font-family: sans-serif;
  }
</style>

<h1>Eaten</h1>

<ul>
{{#each burgers.eaten }}
  <li>{{this.burger_name}}</li>
{{/each}}
</ul>

<hr/>

<h1>Uneaten</h1>

<ul>
{{#each burgers.uneaten }}
  <li>
      {{this.burger_name}} 
    <form action='/api/burgers/devour/{{this.id}}' method="POST">
	    <button type="submit">Submit</button>
    </form>
  </li>
{{/each}}
</ul>

<hr/>
<h1>Add Burger</h1>
<form action='/api/burgers/create' method="POST">
    <label for="burger">Burger:</label><br>
    <input type="text" id="burger" name="burger" value=""><br>    
    <button type="submit">Submit</button>
</form>

